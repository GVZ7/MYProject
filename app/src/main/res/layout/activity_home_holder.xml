<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="240dp"
    android:layout_height="match_parent">
    <ImageView
        android:id="@+id/img_major"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_marginTop="10dp"
        android:src="@drawable/img_profile"></ImageView>

    <LinearLayout
        android:layout_below="@+id/img_major"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:layout_gravity="center"
            android:padding="10dp"
            android:layout_below="@id/img_major"
            android:text="zzzzzzzzzz"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
</RelativeLayout>