<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <EditText
        android:id="@+id/signup_email"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_above="@+id/signup_password"
        android:layout_alignParentStart="true"
        android:hint="Email"
        android:layout_alignParentLeft="true" />

    <EditText
        android:id="@+id/signup_password"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_above="@+id/signup_user"
        android:layout_alignParentStart="true"
        android:hint="Password"
        android:inputType="textPassword"
        android:layout_alignParentLeft="true" />


    <EditText
        android:id="@+id/signup_user"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="141dp"
        android:hint="Username"
        android:layout_alignParentLeft="true" />

    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/pic_registration"
        android:layout_width="180dp"
        android:layout_height="170dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="24dp"
        android:onClick="choose_picture"
        app:placeholderImage="@drawable/ic_profile" />
    <Button
        android:id="@+id/btn-summit"
        android:layout_width="100dp"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="49dp"
        android:background="@drawable/rounded_button"
        android:onClick="register"
        android:text="Register" />
</RelativeLayout>