<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!--head-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="67dp"
        android:orientation="horizontal"
        android:background="@android:color/primary_text_dark_nodisable">


        <ImageButton
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:src="@drawable/ic_back"
            android:layout_gravity="center"
            />

        <TextView
            android:layout_width="120dp"
            android:layout_height="45dp"
            android:text="Setting"
            android:textSize="20dp"
            android:layout_gravity="center"
            android:layout_marginHorizontal="70dp"
            android:gravity="center"/>


    </LinearLayout>

    <!--body-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@android:color/background_light">

        <!--combo language-->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <EditText
            android:layout_width="match_parent"
            android:layout_height="68dp"
            android:hint="Language" /><!--need combobox-->

            <ImageButton
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="13dp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="13dp"
                android:src="@drawable/ic_more_language"/>
        </RelativeLayout>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="68dp"
            android:hint="Theme" />


        <!--image radio button-->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RadioButton
                android:id="@+id/rd1"
                android:layout_width="149dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:drawableRight="@drawable/light_theme"
                android:background="@drawable/border"
                />

            <RadioButton
                android:layout_width="149dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="15dp"
                android:layout_toRightOf="@+id/rd1"
                android:drawableRight="@drawable/dark_theme"
                />

        </RelativeLayout>


    </LinearLayout>

<!--how make line under textbox and divider on top n bottom-->

</LinearLayout>