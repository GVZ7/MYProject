<?xml version="1.0" encoding="utf-8"?>
<LinearLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_height="180dp">
        <TextView
            android:layout_width="wrap_content"
            android:text="IM"
            android:textSize="100dp"
            android:textStyle="normal"
            android:typeface="serif"
            android:textColor="#000"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_width="wrap_content"
            android:text="IMajor's My Future"
            android:textSize="20dp"
            android:textStyle="bold"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:gravity="center"
        android:layout_margin="20dp"
        android:layout_height="match_parent">
        <EditText
            android:id="@+id/username"
            android:layout_width="300dp"
            android:hint="Username"
            android:layout_height="wrap_content" />
        <EditText
            android:id="@+id/login_password"
            android:layout_below="@id/username"
            android:layout_width="300dp"
            android:hint="Phone or Email"
            android:layout_height="wrap_content" />
        <Button
            android:layout_margin="20dp"
            android:id="@+id/btn_signin"
            android:layout_width="70dp"
            android:background="@drawable/rounded_button"
            android:layout_below="@id/login_password"
            android:text="signin"
            android:layout_height="wrap_content"
            android:onClick="signin"/>

        <Button
            android:id="@+id/btn_signup"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/btn_facebook"
            android:layout_alignTop="@+id/btn_signin"
            android:background="@drawable/rounded_button"
            android:text="signup"
            android:layout_alignLeft="@+id/btn_facebook"
            android:onClick="signup"/>
        <TextView
            android:layout_width="70dp"
            android:layout_marginLeft="10dp"
            android:background="@drawable/line"
            android:layout_below="@id/btn_signin"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/txtconnect-to"
            android:layout_width="300dp"
            android:text="OR CONNECT WITH"
            android:layout_below="@id/btn_signin"
            android:gravity="center"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_width="85dp"
            android:background="@drawable/line"
            android:layout_below="@id/btn_signin"
            android:layout_alignRight="@id/txtconnect-to"
            android:layout_height="wrap_content" />
        <ImageView
            android:id="@+id/img_google"
            android:layout_width="70dp"
            android:src="@drawable/google"
            android:layout_below="@id/txtconnect-to"
            android:layout_marginTop="30dp"
            android:layout_height="80dp" />
        <com.facebook.login.widget.LoginButton
            android:id="@+id/btn_facebook"
            android:layout_width="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginTop="30dp"
            android:src="@drawable/ic_emotion"
            android:layout_below="@id/txtconnect-to"
            android:layout_height="wrap_content" />

    </RelativeLayout>
</LinearLayout>